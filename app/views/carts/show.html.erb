<% @cart.items.each do |item|%>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Quantity</th>
				<th>Image</th>
				<th>Product</th>
				<th>Price</th>
			</tr>
		</thead>
		<tr>
			<td><%= item.quantity%></td>
			<td><%= image_tag item.product.image.url, width: "150" %> </td>
				<td><%= link_to item.product.name, item.product%></td>
			<td><%= item.total_price %></td>
		</tr>
	</table>

<% end -%>

<p><%= @cart.total_price%></p>